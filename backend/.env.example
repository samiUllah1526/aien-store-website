# Server
PORT=3000
NODE_ENV=development
# CORS allowed origins (comma-separated). Leave unset for dev defaults (localhost:4321, etc.)
# CORS_ORIGIN=https://admin.example.com,https://www.example.com

# Database (PostgreSQL)
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/adab?schema=public"
# Optional: separate DB for integration tests (defaults to DATABASE_URL)
# DATABASE_URL_TEST="postgresql://USER:PASSWORD@localhost:5432/adab_test?schema=public"

# JWT (auth)
JWT_SECRET="change-me-in-production"
JWT_EXPIRES_SEC=604800

# Seed: first admin user. Run after DB is ready: npx prisma db push (or migrate), then npm run db:seed
# SEED_ADMIN_EMAIL=admin@example.com
# SEED_ADMIN_PASSWORD=Admin123!
# SEED_ADMIN_NAME=Admin
