---
import AdminLayout from '../../../layouts/AdminLayout.astro';

const docLinks = [
  { href: '/admin/docs/order-status', label: 'Order status', description: 'Valid and invalid status transitions for orders' },
];
---

<AdminLayout title="Documentation">
  <div class="space-y-6">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Documentation</h1>
    <p class="text-slate-600 dark:text-slate-400">
      Internal documentation for the admin portal. Use the links below to browse by topic.
    </p>
    <ul class="space-y-3">
      {docLinks.map((doc) => (
        <li>
          <a
            href={doc.href}
            class="block rounded-lg border border-slate-200 bg-white p-4 shadow-sm transition-colors hover:border-slate-300 hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-800 dark:hover:border-slate-600 dark:hover:bg-slate-700/50"
          >
            <span class="font-medium text-slate-900 dark:text-slate-100">{doc.label}</span>
            {doc.description && (
              <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">{doc.description}</p>
            )}
          </a>
        </li>
      ))}
    </ul>
  </div>
</AdminLayout>
