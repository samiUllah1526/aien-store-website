---
import '../styles/global.css';
import { appName } from '../lib/config';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{appName}</title>
  </head>
  <body class="min-h-screen bg-slate-50 flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-2xl font-bold text-slate-900">{appName}</h1>
      <a
        href="/admin"
        class="mt-4 inline-block rounded-lg bg-slate-900 px-6 py-2 text-sm font-medium text-white hover:bg-slate-800"
      >
        Go to Dashboard
      </a>
    </div>
  </body>
</html>
