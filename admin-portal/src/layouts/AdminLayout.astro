---
interface Props {
  title?: string;
}

const { title = 'Admin' } = Astro.props;
const currentPath = Astro.url.pathname;
import '../styles/global.css';
import { iconPaths } from '../lib/iconPaths';
import { API_BASE_URL } from '../lib/config';
import AdminUserMenu from '../components/AdminUserMenu';
const navItems = [
  { href: '/admin', label: 'Dashboard', icon: 'dashboard' },
  { href: '/admin/profile', label: 'Profile', icon: 'users' },
  { href: '/admin/products', label: 'Products', icon: 'products' },
  { href: '/admin/categories', label: 'Categories', icon: 'categories' },
  { href: '/admin/orders', label: 'Orders', icon: 'orders' },
  { href: '/admin/users', label: 'Users', icon: 'users' },
  { href: '/admin/email-logs', label: 'Email Logs', icon: 'emaillogs' },
  { href: '/admin/settings', label: 'Settings', icon: 'settings' },
  { href: '/admin/docs', label: 'Documentation', icon: 'docs' },
];

const isActive = (href: string) =>
  href === '/admin' ? currentPath === '/admin' || currentPath === '/admin/' : currentPath.startsWith(href);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | E-Commerce Admin</title>
    <script is:inline>
      (function(){var d=document.documentElement;var s=localStorage.getItem('admin_dark');if(s==='true')d.classList.add('dark');else if(s==='false')d.classList.remove('dark');})();
    </script>
  </head>
  <body class="h-screen overflow-hidden bg-slate-100 text-slate-900 antialiased dark:bg-slate-900 dark:text-slate-100" data-api-base={API_BASE_URL}>
    <script is:inline>
      window.__API_BASE__ = document.body.dataset.apiBase || 'http://localhost:3000';
    </script>
    <div class="flex h-screen overflow-hidden" id="admin-root">
      <!-- Mobile sidebar backdrop -->
      <div
        id="sidebar-backdrop"
        class="fixed inset-0 z-40 bg-slate-900/50 backdrop-blur-sm dark:bg-black/60 lg:hidden opacity-0 pointer-events-none transition-opacity duration-200"
        aria-hidden="true"
      />

      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="fixed inset-y-0 left-0 z-50 w-64 shrink-0 border-r border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800 transition-transform duration-200 ease-out lg:translate-x-0 lg:shadow-none -translate-x-full"
        aria-label="Main navigation"
      >
        <div class="flex h-16 items-center justify-between border-b border-slate-200 dark:border-slate-700 px-4 lg:px-6">
          <a href="/admin" class="text-lg font-semibold tracking-tight text-slate-800 dark:text-slate-100">
            E-Commerce Admin
          </a>
          <button
            type="button"
            id="sidebar-close"
            class="rounded-lg p-2 text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-700 dark:hover:text-slate-200 lg:hidden"
            aria-label="Close menu"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <nav class="p-3 space-y-0.5" aria-label="Sidebar">
          {navItems.map((item) => {
            const active = isActive(item.href);
            return (
              <a
                href={item.href}
                class={`flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition-colors ${
                  active
                    ? 'bg-slate-100 text-slate-900 font-semibold dark:bg-slate-700 dark:text-slate-100'
                    : 'text-slate-600 hover:bg-slate-50 hover:text-slate-900 dark:text-slate-300 dark:hover:bg-slate-700 dark:hover:text-slate-100'
                }`}
              >
                <svg
                  class="h-5 w-5 shrink-0 text-slate-500 dark:text-slate-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[item.icon]} />
                </svg>
                {item.label}
              </a>
            );
          })}
        </nav>
      </aside>

      <!-- Main content area -->
      <div class="flex flex-1 flex-col min-w-0 min-h-0 lg:pl-64">
        <!-- Topbar -->
        <header class="flex h-16 shrink-0 items-center justify-between gap-4 border-b border-slate-200 bg-white px-4 shadow-sm dark:border-slate-700 dark:bg-slate-800 sm:px-6 lg:px-8">
          <button
            type="button"
            id="sidebar-open"
            class="rounded-lg p-2 text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-700 dark:hover:text-slate-200 lg:hidden"
            aria-label="Open menu"
          >
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <div class="flex flex-1 justify-end items-center gap-2 sm:gap-3 lg:gap-4">
            <button
              type="button"
              id="theme-toggle"
              class="rounded-lg p-2 text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-700 dark:hover:text-slate-200"
              aria-label="Toggle dark mode"
              title="Toggle dark mode"
            >
              <svg id="theme-icon-light" class="h-5 w-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
              <svg id="theme-icon-dark" class="h-5 w-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
            </button>
            <AdminUserMenu client:load />
          </div>
        </header>

        <!-- Page content -->
        <main class="flex-1 min-h-0 overflow-auto">
          <div class="p-4 sm:p-6 lg:p-8">
            <slot />
          </div>
        </main>
      </div>
    </div>

    <script>
      (function () {
        const sidebar = document.getElementById('sidebar');
        const backdrop = document.getElementById('sidebar-backdrop');
        const openBtn = document.getElementById('sidebar-open');
        const closeBtn = document.getElementById('sidebar-close');

        function openSidebar() {
          if (!sidebar || !backdrop) return;
          sidebar.classList.remove('-translate-x-full');
          backdrop.classList.remove('opacity-0', 'pointer-events-none');
          backdrop.classList.add('opacity-100');
          document.body.style.overflow = 'hidden';
        }

        function closeSidebar() {
          if (!sidebar || !backdrop) return;
          sidebar.classList.add('-translate-x-full');
          backdrop.classList.remove('opacity-100');
          backdrop.classList.add('opacity-0', 'pointer-events-none');
          document.body.style.overflow = '';
        }

        openBtn?.addEventListener('click', openSidebar);
        closeBtn?.addEventListener('click', closeSidebar);
        backdrop?.addEventListener('click', closeSidebar);

        var themeToggle = document.getElementById('theme-toggle');
        themeToggle?.addEventListener('click', function () {
          var d = document.documentElement;
          var isDark = d.classList.toggle('dark');
          localStorage.setItem('admin_dark', isDark ? 'true' : 'false');
          try { window.dispatchEvent(new CustomEvent('themechange', { detail: { dark: isDark } })); } catch (e) {}
        });

        // Close sidebar on escape
        document.addEventListener('keydown', function (e) {
          if (e.key === 'Escape') closeSidebar();
        });
      })();
    </script>
  </body>
</html>
