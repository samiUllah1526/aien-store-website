---
/**
 * Checkout (UI only): clean form for shipping/details.
 * No payment integration — frontend experience only.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import CheckoutForm from '../components/checkout/CheckoutForm';
import { brandName, checkoutMetaDescription } from '../config';
---

<BaseLayout title={`Checkout — ${brandName}`} description={checkoutMetaDescription}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-10 md:py-14">
    <h1 class="font-display text-3xl text-ink dark:text-cream mb-8">Checkout</h1>
    <CheckoutForm client:load />
  </div>
</BaseLayout>
