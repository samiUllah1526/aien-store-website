---
/**
 * Home: static shell. Data fetched client-side (no build-time API dependency).
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import HomePage from '../components/home/HomePage';
import { brandName, defaultMetaDescription, heroVideoUrl, heroVideoPoster } from '../config';
---

<BaseLayout title={brandName} description={defaultMetaDescription}>
  <HomePage client:load videoSrc={heroVideoUrl} videoPoster={heroVideoPoster} />
</BaseLayout>
