---
/**
 * Base layout: poetic, minimal, premium.
 * Single React shell (LayoutShell) wraps nav, main slot, footer, and cart for shared state.
 * Fetches site settings (logo, footer, social) for the shell.
 */
import '../styles/global.css';
import LayoutShell from '../components/LayoutShell';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Adab â€” Wear the Words', description = 'Urdu & Adabi inspired streetwear. Poetry on fabric.' } = Astro.props;

const baseUrl = (import.meta.env.PUBLIC_API_URL || 'http://localhost:3000').toString().replace(/\/$/, '');
let siteSettings: {
  logoPath: string | null;
  about: { title?: string; subtitle?: string; content?: string };
  footer: { tagline?: string; copyright?: string };
  social: { facebook?: string; instagram?: string; twitter?: string; youtube?: string };
} | null = null;
try {
  const res = await fetch(`${baseUrl}/settings/public`);
  const json = await res.json();
  if (json?.success && json?.data) siteSettings = json.data;
} catch {
  // use defaults (null) so shell falls back to hardcoded
}
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Theme: set dark class on <html> before any paint (Tailwind darkMode: 'class') -->
    <script is:inline>
      (function(){var el=document.documentElement;try{var s=localStorage.getItem('adab-theme');var dark=s==='dark'||(s!=='light'&&typeof window!=='undefined'&&window.matchMedia&&window.matchMedia('(prefers-color-scheme: dark)').matches);if(dark)el.classList.add('dark');else el.classList.remove('dark');}catch(e){el.classList.remove('dark');}})();
    </script>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000&family=Noto+Nastaliq+Urdu:wght@400;700&family=Playfair+Display:ital,wght@0,400..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-cream dark:bg-ink text-charcoal dark:text-cream antialiased transition-colors duration-300">
    <LayoutShell client:load siteSettings={siteSettings}>
      <slot />
    </LayoutShell>
  </body>
</html>
